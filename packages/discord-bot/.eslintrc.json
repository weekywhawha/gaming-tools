{
  "extends": "node",
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {
      "ignoredNodes": ["TemplateLiteral"]}],
    "import/prefer-default-export": 0
  }
}
