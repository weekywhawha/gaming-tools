{
    "compilerOptions": {
      "target": "es2020",                          
      "module": "commonjs",                    
      "lib": ["es2018", "dom"],
      "moduleResolution": "node", 
                                                   
      "rootDir": ".",
      "baseUrl": "./packages",
      "paths": {
        "@gaming-tools/*": ["./packages/*"],
        "types/*": ["./packages/*/types", "./packages/types"]
      },
      "typeRoots": ["./node_modules/@types", "./packages/*/type-definitions"],

      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,

      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noImplicitReturns": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/dist"]
  }